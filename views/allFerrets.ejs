<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/javascripts/tailwind.js"></script>
    <link rel="stylesheet" href="/stylesheets/common.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <%- include("./modules/favicon.ejs") %>
    <title>PawFound | Todos los hurones</title>
  </head>
  <body class="bg-white font-['Raleway']">
    <header><%- include("./modules/nav.ejs") %></header>
    <main>
      <%- include("./modules/logoSection.ejs") %>
      <section class="mb-24">
        <div class="max-w-screen-xl mx-auto px-6 sm:px-4">
          <article
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10"
          >
            <% data.forEach((ferret) => { %>
            <div
              class="w-full bg-cardYellow border border-mainBlue rounded-lg overflow-hidden"
            >
              <div class="overflow-hidden">
                <img
                  onclick="window.location.href='/petOwners/oneOwner/<%= ferret.pet_owner_id %>'"
                  class="rounded-t-lg w-full h-80 object-cover cursor-pointer hover:scale-125 transition duration-300 ease-in"
                  src="/images/pets-img/<%= ferret.pet_img?ferret.pet_img:'defaultNoImg.webp' %>"
                  alt=""
                />
              </div>
              <div class="p-5">
                <span
                  class="mb-2 text-xs uppercase text-mainBlue font-extrabold tracking-tight text-gray-900"
                >
                  <%= ferret.category_name %></span
                >
                <h5
                  class="mb-2 text-3xl font-bold tracking-tight text-gray-900"
                >
                  <%= ferret.pet_name %>
                </h5>
                <p class="mb-3 leading-relaxed text-pretty text-gray-700">
                  <%= ferret.pet_desc %>
                </p>
                <div class="w-full h-0.5 bg-mainBlue mb-4"></div>
                <a
                  href="/petOwners/oneOwner/<%= ferret.pet_owner_id %>"
                  class="mb-3 font-medium text-mainBlue hover:underline"
                >
                  <%= ferret.pet_owner_name %>
                </a>
              </div>
            </div>
            <% }) %>
          </article>
        </div>
      </section>
    </main>
    <%- include("./modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
  </body>
</html>
